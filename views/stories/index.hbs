<h1 class="center top bottom">Stories</h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m6">
        <div class="card">
            <div class="card-content center">
                <h4 class="bottom">{{title}}</h4>
                <p>{{ truncate (stripTags body)}}</p>
                <br>
                <div class="chip">
                    <a href="/stories/user/{{user._id}}">{{user.firstName}}{{user.lastName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class="btn">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p> No stories to display</p>
    {{/each}}
</div>