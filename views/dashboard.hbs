<section>
    <div class="container">
        {{!-- <h2>Hello, </h2> --}}
        <h4 class="center ">Your stories</h4>
        {{#if stories}}
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Status</th>

                </tr>
            </thead>
            <tbody>
                {{#each stories}}
                <tr>
                    <td>
                        <a href="/stories/{{_id}}"></a>{{title}}
                    </td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <p>You have not created any stories </p>
        {{/if}}
    </div>

</section>